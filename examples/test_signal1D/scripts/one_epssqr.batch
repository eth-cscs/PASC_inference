#!/bin/bash -l

## sbatch settings
#SBATCH --nodes=4
#SBATCH --ntasks-per-node=1
#SBATCH --time=00:20:00
#SBATCH --partition=normal
#SBATCH --output=batch_out/sample_1e-5.%j.o
#SBATCH --error=batch_out/sample_1e-5.%j.e

## load modules
source ~/soft/PASC_inference//util/module_load_daint_sandbox

## set number of threads
export OMP_NUM_THREADS=1

## run the job
srun -n 4 ./test_signal1D --test_filename=data/strong_10e7_data.bin --test_filename_solution=data/strong_10e7_solution.bin --test_filename_gamma0=data/strong_10e7_gamma0.bin --test_cutdata=false --test_scaledata=false --test_epssqr=1e-5 --test_annealing=1 --tssolver_maxit=1 --tssolver_debugmode=0 --spgqpsolver_maxit=10000 --spgqpsolver_debugmode=0 --spgqpsolver_stop_difff=false --spgqpsolver_stop_Anormgp=true --test_shortinfo=true --test_K=2 --test_Theta=1.0 --test_Theta=2.0 --test_filename_out=sample_1e-5 --test_shortinfo_header=ncpus, --test_shortinfo_values=4, --test_shortinfo_filename=shortinfo/sample_1e-5.txt --spgqpsolver_eps=1e-5 > batch_out/sample_1e-5.log
