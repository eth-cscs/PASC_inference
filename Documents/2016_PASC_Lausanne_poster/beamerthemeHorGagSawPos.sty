\setbeamertemplate{headline}{  
%  \leavevmode

  \begin{beamercolorbox}[wd=1.0\paperwidth]{headline}
    \begin{columns}[T]
      \begin{column}{.02\paperwidth}
      \end{column}
      \begin{column}{.4\paperwidth}
        \vskip7ex
        \center
        \usebeamercolor{title in headline}{\color{fg}\textbf{\inserttitle}\\[3ex]}
      \end{column}
      \begin{column}{.5\paperwidth}
        \vskip5ex
        \usebeamercolor{author in headline}{\color{fg}\insertauthor\\[1ex]}
        \usebeamercolor{institute in headline}{\color{fg}\insertinstitute}
      \end{column}
      \begin{column}{.02\paperwidth}
      \end{column}
    \end{columns}
    \vskip5ex
  \end{beamercolorbox}

}

